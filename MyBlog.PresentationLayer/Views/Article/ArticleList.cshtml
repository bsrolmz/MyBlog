@model List<Article>

@{
    Layout = null;
}

<link href="~/lib/bootstrap/dist/css/bootstrap.min.css" rel="stylesheet" />

<div class="container">
    <br /><br />
    <table class="table table-bordered">
        <tr>
            <th>ID</th> 
            <th>Başlık</th>
            <th>Kategori</th>
            <th>Sil</th>
            <th>Güncelle</th>
            <th>Yorumlar</th>
        </tr>
        @foreach (var item in Model)
        {
            <tr>
               <td>@item.ArticleId</td>
               <td>@item.Title</td>
               <td>@item.Category.CategoryName</td>
                <td><a href="/Article/DeleteArticle/@item.ArticleId" class="btn btn-danger">Sil</a></td>
                <td><a href="/Article/UpdateArticle/@item.ArticleId" class="btn btn-success">Güncelle</a></td>
                <td><a href="#" class="btn btn-warning">Yorumlar</a></td>
            </tr>
        }
    </table>
    <a href="#" class="btn btn-primary">Yeni Yorum Girişi</a>
</div>